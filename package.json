{
  "name": "@ldesign/lottie-monorepo",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "description": "High-performance Lottie animation library monorepo",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm run build:core && pnpm run build:frameworks",
    "build:core": "pnpm --filter @ldesign/lottie-core build",
    "build:frameworks": "pnpm run build:react && pnpm run build:vue && pnpm run build:preact && pnpm run build:angular && pnpm run build:solid && pnpm run build:svelte && pnpm run build:qwik && pnpm run build:lit",
    "build:react": "pnpm --filter @ldesign/lottie-react build",
    "build:vue": "pnpm --filter @ldesign/lottie-vue build",
    "build:preact": "pnpm --filter @ldesign/lottie-preact build",
    "build:angular": "pnpm --filter @ldesign/lottie-angular build",
    "build:solid": "pnpm --filter @ldesign/lottie-solid build",
    "build:svelte": "pnpm --filter @ldesign/lottie-svelte build",
    "build:qwik": "pnpm --filter @ldesign/lottie-qwik build",
    "build:lit": "pnpm --filter @ldesign/lottie-lit build",
    "test": "pnpm -r run test",
    "test:unit": "pnpm -r run test:run",
    "test:coverage": "pnpm -r run test:coverage",
    "lint": "pnpm -r run lint",
    "lint:fix": "pnpm -r run lint:fix",
    "type-check": "pnpm -r run type-check",
    "clean": "pnpm -r run clean && rimraf node_modules",
    "example:core": "pnpm --filter @examples/lottie-core-demo dev",
    "example:react": "pnpm --filter @examples/lottie-react-demo dev",
    "example:vue": "pnpm --filter @examples/lottie-vue-demo dev",
    "example:angular": "pnpm --filter @examples/lottie-angular-demo dev",
    "example:solid": "pnpm --filter @examples/lottie-solid-demo dev",
    "example:svelte": "pnpm --filter @examples/lottie-svelte-demo dev",
    "example:qwik": "pnpm --filter @examples/lottie-qwik-demo dev",
    "example:lit": "pnpm --filter @examples/lottie-lit-demo dev",
    "docs:dev": "pnpm --filter @ldesign/lottie-docs dev",
    "docs:build": "pnpm --filter @ldesign/lottie-docs build",
    "docs:preview": "pnpm --filter @ldesign/lottie-docs preview",
    "verify:build": "node scripts/verify-build.js",
    "verify:examples": "node scripts/verify-examples.mjs",
    "quick-start": "node scripts/quick-start.js",
    "perf": "node scripts/performance-test.js",
    "test:memory": "vitest run tests/memory-leak.test.ts",
    "test:visual": "playwright test",
    "test:visual:ui": "playwright test --ui",
    "test:visual:debug": "playwright test --debug",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.2",
    "vite": "^5.0.4",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.12.0",
  "keywords": [
    "lottie",
    "animation",
    "webgl",
    "wasm",
    "react",
    "vue",
    "angular",
    "solid",
    "solidjs",
    "svelte",
    "qwik",
    "lit",
    "monorepo",
    "framework-agnostic"
  ]
}