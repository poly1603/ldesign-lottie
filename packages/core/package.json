{
  "name": "@ldesign/lottie-core",
  "version": "2.0.0",
  "description": "Core Lottie animation library with WebGL and WASM support",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./wasm": {
      "types": "./dist/wasm/index.d.ts",
      "import": "./dist/wasm/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "test": "vitest",
    "lint": "eslint src",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist node_modules"
  },
  "dependencies": {
    "eventemitter3": "^5.0.1",
    "lottie-web": "^5.12.2"
  },
  "devDependencies": {
    "@rollup/rollup-win32-x64-msvc": "^4.52.5",
    "@types/node": "^20.10.0",
    "eslint": "^8.54.0",
    "rimraf": "^5.0.5",
    "terser": "^5.26.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.4",
    "vite-plugin-dts": "^3.7.0",
    "vitest": "^1.0.4"
  },
  "keywords": [
    "lottie",
    "animation",
    "webgl",
    "wasm",
    "gpu"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/lottie",
    "directory": "packages/core"
  },
  "publishConfig": {
    "access": "public"
  }
}
