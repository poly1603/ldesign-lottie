{
  "name": "@ldesign/lottie-svelte",
  "version": "2.0.0",
  "description": "Svelte component for Lottie animations",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "svelte": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./src/index.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist node_modules"
  },
  "peerDependencies": {
    "svelte": "^4.0.0 || ^5.0.0"
  },
  "dependencies": {
    "@ldesign/lottie-core": "workspace:*"
  },
  "devDependencies": {
    "svelte": "^5.0.0",
    "@sveltejs/vite-plugin-svelte": "^6.1.3",
    "@antfu/eslint-config": "^6.0.0",
    "@types/node": "^20.10.0",
    "eslint": "^9.18.0",
    "eslint-plugin-svelte": "^2.35.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.7.3",
    "vitest": "^1.6.1",
    "@vitest/coverage-v8": "^1.6.1",
    "@testing-library/svelte": "^5.0.0"
  },
  "keywords": [
    "lottie",
    "svelte",
    "svelte5",
    "animation",
    "component"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/lottie",
    "directory": "packages/svelte"
  },
  "publishConfig": {
    "access": "public"
  }
}
