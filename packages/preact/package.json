{
  "name": "@ldesign/lottie-preact",
  "version": "2.0.0",
  "description": "Preact component for Lottie animations",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "test": "vitest",
    "lint": "eslint src",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist node_modules"
  },
  "peerDependencies": {
    "preact": ">=10.0.0"
  },
  "dependencies": {
    "@ldesign/lottie-core": "workspace:*"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.9.2",
    "eslint": "^8.54.0",
    "preact": "^10.24.3",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.2",
    "vite": "^5.0.4",
    "vite-plugin-dts": "^3.7.0",
    "vitest": "^1.0.4"
  },
  "keywords": [
    "lottie",
    "preact",
    "animation",
    "component"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/lottie",
    "directory": "packages/preact"
  },
  "publishConfig": {
    "access": "public"
  }
}
